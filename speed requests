<script>
  function sendCommand(direction) {
    var xhr = new XMLHttpRequest();
    xhr.open("GET", "http://10.243.93.234:5000/drive?command=" + direction, true);
    xhr.onreadystatechange = function() {
      if (xhr.readyState === 4 && xhr.status === 200) {
        console.log('Command sent:', direction);
      }
    };
    xhr.send();
  }

  function sendCommandWithValue(command) {
    var value = document.getElementById(command.toLowerCase() + "Input").value;
    sendCommand(command + "=" + value);
  }
</script>

